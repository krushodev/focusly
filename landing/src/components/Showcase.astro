<section class="relative py-24 px-6">
  <div class="max-w-5xl mx-auto perspective-1000">
    <!-- App Window -->
    <div class="gsap-showcase relative rounded-2xl border border-white/10 bg-[#15171C] shadow-2xl overflow-hidden group">
      <!-- Window Title Bar -->
      <div class="flex items-center justify-between px-4 py-3 bg-[#0E0F12] border-b border-white/5">
        <div class="flex items-center gap-2">
          <div class="flex gap-1.5">
            <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
          </div>
          <span class="ml-3 text-xs text-gray-500">Focusly</span>
        </div>
        <div class="flex items-center gap-2 text-gray-600">
          <span class="text-xs">─</span>
          <span class="text-xs">□</span>
          <span class="text-xs">×</span>
        </div>
      </div>

      <!-- App Content -->
      <div class="p-8 bg-gradient-to-b from-[#0E0F12] to-[#12141a]">
        <!-- Mode Selector -->
        <div class="flex justify-center gap-2 mb-8">
          <span class="px-4 py-1.5 bg-violet-600 text-white text-xs font-medium rounded-lg">Classic</span>
          <span class="px-4 py-1.5 bg-white/5 text-gray-400 text-xs font-medium rounded-lg">Deep Focus</span>
          <span class="px-4 py-1.5 bg-white/5 text-gray-400 text-xs font-medium rounded-lg">Ultra</span>
        </div>

        <!-- Cycle Dots -->
        <div class="flex justify-center gap-2 mb-6">
          <span class="w-2 h-2 rounded-full bg-violet-500"></span>
          <span class="w-2 h-2 rounded-full bg-white/20"></span>
          <span class="w-2 h-2 rounded-full bg-white/20"></span>
          <span class="w-2 h-2 rounded-full bg-white/20"></span>
        </div>

        <!-- Timer Display -->
        <div class="flex items-center justify-center mb-8">
          <div class="relative w-56 h-56">
            <!-- Background Ring -->
            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="45" fill="none" stroke="#27272a" stroke-width="6"></circle>
              <circle cx="50" cy="50" r="45" fill="none" stroke="url(#gradient)" stroke-width="6" stroke-dasharray="283" stroke-dashoffset="70" stroke-linecap="round"></circle>
              <defs>
                <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#8b5cf6"></stop>
                  <stop offset="100%" stop-color="#06b6d4"></stop>
                </linearGradient>
              </defs>
            </svg>
            <!-- Timer Text -->
            <div class="absolute inset-0 flex flex-col items-center justify-center">
              <span class="text-5xl font-display font-bold text-white tracking-tight">18:42</span>
              <span class="text-sm text-gray-500 mt-1">Focusing...</span>
            </div>
          </div>
        </div>

        <!-- Session Label -->
        <p class="text-center text-violet-400 text-sm font-medium mb-6">Focus Session</p>

        <!-- Controls -->
        <div class="flex justify-center gap-3">
          <button class="px-8 py-3 bg-violet-600 text-white font-semibold rounded-xl text-sm">Pause</button>
          <button class="px-6 py-3 bg-white/5 text-gray-400 font-medium rounded-xl text-sm border border-white/10">Reset</button>
          <button class="p-3 bg-white/5 text-gray-400 rounded-xl border border-white/10">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Hover Overlay -->
      <div class="absolute inset-0 bg-gradient-to-tr from-violet-500/5 to-cyan-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none"></div>
    </div>

    <!-- Glow Effect -->
    <div class="absolute -bottom-10 left-1/2 -translate-x-1/2 w-[80%] h-32 bg-violet-500/20 blur-[100px] -z-10"></div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  gsap.from('.gsap-showcase', {
    scrollTrigger: {
      trigger: '.gsap-showcase',
      start: 'top 85%',
      end: 'bottom center',
      scrub: 1
    },
    rotateX: 8,
    scale: 0.95,
    opacity: 0,
    y: 60,
    ease: 'power2.out'
  });
</script>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
</style>
