<section class="relative py-20 px-6">
  <div class="max-w-5xl mx-auto perspective-1000">
    <div class="gsap-showcase relative rounded-xl border border-white/10 bg-[#15171C] shadow-2xl overflow-hidden aspect-[16/10] group">
      <div class="absolute inset-0 flex items-center justify-center bg-[#0E0F12]">
        <div class="text-center">
          <div class="w-64 h-64 rounded-full border-8 border-[#15171C] flex items-center justify-center mx-auto mb-8 relative">
            <svg class="w-full h-full absolute transform -rotate-90 text-violet-500" viewBox="0 0 100 100">
              <circle cx="50" cy="50" r="45" fill="none" stroke="currentColor" stroke-width="4" stroke-dasharray="283" stroke-dashoffset="70"></circle>
            </svg>
            <span class="text-6xl font-display font-bold text-white">25:00</span>
          </div>
          <p class="text-gray-400 tracking-widest uppercase text-sm">Focus Session</p>
        </div>
      </div>

      <div class="absolute inset-0 bg-gradient-to-tr from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none"></div>
    </div>

    <div class="absolute -bottom-10 left-1/2 -translate-x-1/2 w-[80%] h-20 bg-violet-500/20 blur-[80px] -z-10"></div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  gsap.from('.gsap-showcase', {
    scrollTrigger: {
      trigger: '.gsap-showcase',
      start: 'top 80%',
      end: 'bottom center',
      scrub: 1
    },
    rotateX: 10,
    scale: 0.9,
    opacity: 0,
    y: 100,
    ease: 'power2.out'
  });
</script>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
</style>
